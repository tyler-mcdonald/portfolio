extends layout.pug

block content

  article.portfolio-intro
    h1 Project Portfolio
    p Here are some projects that I've built so far. Feel to to explore each of them further!

  article.portfolio-project-thumbs
    .projects-box.box.grid
      each project in projects
        .cell
            a(href=`/projects/${project.id}`)
              img.thumbnail(src=`${project.image_urls.thumbnail}`, alt=`${project.project_name}`)
              h5= project.project_name